alias bk bankick
alias bankick {
    if (![$0] || ([$0] == [*] && ![$1])) {
	xecho -b Usage: /bankick [#channel] <nick> [reason]
	return
    }
    if (ischannel($0) || [$0] == [*]) {
    	@ :h.channel = [$0]
	@ :h.nick = [$1]
	@ :h.reason = [$2-]
    } else {
	@ :h.channel = [*]
	@ :h.nick = [$0]
	@ :h.reason = [$1-]
    }
    ban $h.channel $h.nick
    kick $h.channel $h.nick $h.reason
}

