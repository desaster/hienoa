alias +o op
alias op {
    @ :h.c = 0
    fe ($*) h.a {
	@ h.c++
	@ :h.l = (h.l ? [$h.l ] : []) ## h.a
	if (h.c == h.cfg.max_modes) {
	    mode * +$repeat($h.cfg.max_modes o) $h.l
	    @ h.l = []
	    @ h.c = 0
	}
    }
    if (h.c > [0]) { mode * +$repeat($h.c o) $h.l }
}

